<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LumenFocus.Maui.ViewModels"
             x:Class="LumenFocus.Maui.Views.TasksView"
             Title="Tasks">

    <Grid RowDefinitions="*, Auto">
        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding Tasks}"
                        Margin="20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" CornerRadius="10" BackgroundColor="White">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackLayout Grid.Column="0">
                                <Label Text="{Binding Title}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Description}" 
                                       FontSize="14" 
                                       TextColor="Gray"
                                       IsVisible="{Binding Description, Converter={StaticResource StringToBoolConverter}}" />
                                <Label Text="{Binding CreatedAt, StringFormat='Created: {0:MMM dd, yyyy}'}" 
                                       FontSize="12" 
                                       TextColor="LightGray" />
                            </StackLayout>
                            <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                <Button Text="Edit" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TasksViewModel}}, Path=EditTaskCommand}"
                                        CommandParameter="{Binding}"
                                        BackgroundColor="Blue"
                                        TextColor="White"
                                        WidthRequest="60"
                                        HeightRequest="35" />
                                <Button Text="Delete" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TasksViewModel}}, Path=DeleteTaskCommand}"
                                        CommandParameter="{Binding}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        WidthRequest="60"
                                        HeightRequest="35" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" 
                Text="Add New Task" 
                Command="{Binding AddTaskCommand}"
                BackgroundColor="#512BD4"
                TextColor="White"
                Margin="20"
                HeightRequest="50"
                CornerRadius="25" />
    </Grid>

</ContentPage>
