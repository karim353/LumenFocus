<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LumenFocus.Maui"
             xmlns:converters="clr-namespace:LumenFocus.Maui.Converters"
             x:Class="LumenFocus.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolConverter x:Key="BoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:SessionsToHeightConverter x:Key="SessionsToHeightConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
