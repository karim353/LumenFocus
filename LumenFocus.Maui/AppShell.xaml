<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LumenFocus.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LumenFocus.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LumenFocus">

    <TabBar>
        <Tab Title="Focus" Icon="timer.svg">
            <ShellContent
                Title="Focus"
                ContentTemplate="{DataTemplate local:FocusView}"
                Route="Focus" />
        </Tab>
        
        <Tab Title="Tasks" Icon="timer.svg">
            <ShellContent
                Title="Tasks"
                ContentTemplate="{DataTemplate local:TasksView}"
                Route="Tasks" />
        </Tab>
        
        <Tab Title="Garden" Icon="timer.svg">
            <ShellContent
                Title="Garden"
                ContentTemplate="{DataTemplate local:GardenView}"
                Route="Garden" />
        </Tab>
        
        <Tab Title="Statistics" Icon="timer.svg">
            <ShellContent
                Title="Statistics"
                ContentTemplate="{DataTemplate local:StatisticsView}"
                Route="Statistics" />
        </Tab>
        
        <Tab Title="Settings" Icon="timer.svg">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingsView}"
                Route="Settings" />
        </Tab>
    </TabBar>

</Shell>
